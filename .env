# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================

SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=300

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Directorio donde guardar los archivos de log
LOG_DIR=logs

# Habilitar/deshabilitar logging en consola (true/false)
LOG_CONSOLE=true

# Habilitar/deshabilitar logging en archivos (true/false)
LOG_FILE=true

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Host y puerto del servidor
HOST=0.0.0.0
PORT=8000

# Modo debug (true/false) - NO usar true en producción
DEBUG=false

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# Orígenes permitidos para CORS (separados por comas)
# En desarrollo: http://localhost:3000,http://localhost:8080
# En producción: especificar dominios exactos
CORS_ORIGINS=*

# Permitir credenciales en requests CORS
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Información de la aplicación
APP_NAME=Microservicio Estudiantil
VERSION=1.0.0
DESCRIPTION=API para gestión de estudiantes, pagos y bloqueos

# Configuración de entorno (development, staging, production)
ENVIRONMENT=development

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Tiempo de expiración de tokens en minutos
TOKEN_EXPIRE_MINUTES=300

# Configuración de rate limiting (requests por minuto)
RATE_LIMIT=100

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================

# Habilitar métricas de performance
ENABLE_METRICS=true

# Habilitar trazabilidad de requests
ENABLE_TRACING=true

# Timeout para operaciones de base de datos (segundos)
DB_TIMEOUT=30
